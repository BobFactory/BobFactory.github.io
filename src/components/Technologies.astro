---
const technologies = [
  "JavaScript",
  "TypeScript",
  "Kotlin",
  "Swift",
  "Dart",
  "Android",
  "iOS",
  "React Native",
  "Flutter",
  "Node.js",
  "Express.js",
  "GraphQL",
  "REST APIs",
  "Firebase",
  "MongoDB",
  "PostgreSQL",
  "MySQL",
  "HTML",
  "CSS",
  "Tailwind CSS",
  "Sass",
  "Git",
  "GitHub",
  "CI/CD",
  "Docker",
  "Agile",
  "Scrum",
  "Unit Testing",
  "Integration Testing",
  "Figma",
  "Adobe XD",
  "Cross-Platform Development",
  "Mobile App Development",
  "Web Development",
  "Progressive Web Apps (PWAs)",
];
---

<!-- Technologies.astro -->
<section
  x-data
  x-init="
    $nextTick(() => {
      const content = $refs.content;
      const item = $refs.item;
      const clone = item.cloneNode(true);
      content.appendChild(clone);
    });
  "
  class="w-full flex justify-center relative bg-gradient-to-r from-primary-50 via-blue-100 to-accent-50 text-black py-6 sm:py-8 md:py-10 lg:py-12 overflow-hidden"
>
  <div
    class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 2xl:px-20 flex flex-col items-center gap-4 sm:gap-6 md:gap-8"
  >
    <div class="text-center space-y-2 sm:space-y-3 md:space-y-4">
      <h3
        class="font-montserrat text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold text-gray-900"
      >
        Technologies I work with
      </h3>
      <p
        class="text-gray-500 text-sm sm:text-base md:text-lg lg:text-xl max-w-2xl mx-auto"
      >
        Expertise across the modern tech stack, languages and frameworks
      </p>
    </div>

    <div class="w-full overflow-hidden">
      <div x-ref="content" class="flex animate-marquee">
        <div
          x-ref="item"
          class="flex items-center flex-shrink-0 gap-4 sm:gap-6 md:gap-8 pr-4 sm:pr-6 md:pr-8"
        >
          {
            technologies.map((tech) => (
              <span class="text-xs sm:text-sm md:text-base text-gray-800 font-medium bg-white/55 px-3 sm:px-4 md:px-6 py-1.5 sm:py-2 rounded-xl whitespace-nowrap hover:bg-white/80 transition-all duration-300 flex-shrink-0">
                {tech}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-marquee {
    animation: marquee 120s linear infinite;
    width: max-content;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>
