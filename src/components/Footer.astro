---
import SocialLinks from "./SocialLinks.astro";
import SiteLogo from "./SiteLogo.astro";
---

<footer
  class="w-full py-6 sm:py-8 md:py-10 flex justify-center items-center border-t border-gray-200"
>
  <div
    class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 2xl:px-20"
  >
    <!-- Desktop Layout: Logo - Copyright - Social Links -->
    <div class="hidden md:flex justify-between items-center">
      <!-- Logo -->
      <SiteLogo />

      <!-- Copyright -->
      <div
        x-data="{ year: new Date().getFullYear() }"
        class="flex-1 text-center"
      >
        <span
          x-text="`© ${year} Bawender Y. All Rights Reserved.`"
          class="text-xs sm:text-sm text-gray-700"></span>
      </div>

      <!-- Social Links -->
      <SocialLinks />
    </div>

    <!-- Mobile Layout: Stacked -->
    <div class="md:hidden flex flex-col items-center gap-4 sm:gap-6">
      <!-- Logo -->
      <SiteLogo />

      <!-- Social Links -->
      <SocialLinks />

      <!-- Copyright -->
      <div x-data="{ year: new Date().getFullYear() }">
        <span
          x-text="`© ${year} Bawender Y. All Rights Reserved.`"
          class="text-xs text-gray-600 text-center"></span>
      </div>
    </div>
  </div>
</footer>
