---
import { Icon } from "astro-icon/components";
---

<div class="flex gap-2 sm:gap-4 md:gap-6 lg:gap-8">
  <!-- GitHub -->
  <a
    href="https://github.com/BobFactory"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="GitHub Profile"
    class="text-gray-500 rounded-full hover:text-white hover:bg-black p-1.5 sm:p-2 transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-black/50"
  >
    <Icon name="github" class="size-4 sm:size-5 md:size-6" />
  </a>

  <!-- LinkedIn -->
  <a
    href="https://www.linkedin.com/in/bawender"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="LinkedIn Profile"
    class="text-gray-500 rounded-full hover:text-white hover:bg-blue-600 p-1.5 sm:p-2 transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-blue-600/50"
  >
    <Icon name="linkedin" class="size-4 sm:size-5 md:size-6" />
  </a>

  <!-- Email -->
  <a
    href="mailto:bawender.y@gmail.com"
    aria-label="Send Email"
    class="text-gray-500 rounded-full hover:text-white hover:bg-red-500 p-1.5 sm:p-2 transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-red-500/50"
  >
    <Icon name="mail" class="size-4 sm:size-5 md:size-6" />
  </a>
</div>
