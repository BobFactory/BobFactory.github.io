<!-- About.astro - Enhanced with UI Improvements -->
---
import Technologies from "./Technologies.astro";
import SectionHeading from "./SectionHeading.astro";
import SectionTitle from "./SectionTitle.astro";
import { Icon } from "astro-icon/components";

const highlights = [
  { 
    title: "10+", 
    subtitle: "Years Experience", 
    gradient: "from-blue-500 to-indigo-600",
    bg: "from-blue-50 to-indigo-50",
    iconColor: "text-blue-600"
  },
  { 
    title: "20+", 
    subtitle: "Projects Completed", 
    gradient: "from-green-500 to-emerald-600", 
    bg: "from-green-50 to-emerald-50",
    iconColor: "text-green-600"
  },
  { 
    title: "15+", 
    subtitle: "Happy Clients", 
    gradient: "from-purple-500 to-violet-600",
    bg: "from-purple-50 to-violet-50", 
    iconColor: "text-purple-600"
  },
  { 
    title: "8", 
    subtitle: "Technologies", 
    gradient: "from-orange-500 to-red-600",
    bg: "from-orange-50 to-red-50",
    iconColor: "text-orange-600"
  },
];
---

<section class="w-full flex flex-col items-center relative overflow-hidden">

  <div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 2xl:px-20 mb-16 sm:mb-20 md:mb-24 lg:mb-28 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 md:gap-16 lg:gap-20 mt-8 sm:mt-10 md:mt-12 lg:mt-16">
      
      <!-- Left Content -->
      <div class="order-2 lg:order-1 px-4 sm:px-6 md:px-8 py-6 sm:py-8 space-y-4 sm:space-y-5 md:space-y-6">
        <SectionHeading>About Me</SectionHeading>
        <SectionTitle>
          Mastering Mobile and Web Development Over a Decade
        </SectionTitle>
        <div class="space-y-4 sm:space-y-5 md:space-y-6">
          <p class="font-poppins text-gray-600 text-sm sm:text-base md:text-lg leading-6 sm:leading-7 md:leading-8">
            Since 2015, I've dedicated myself to mastering mobile and web
            development, turning ideas into reality through innovative, scalable
            solutions. With 10+ years of experience, I specialize in building apps
            using both Native Android/iOS and cross-platform technologies like
            React Native and Flutter.
          </p>
          <p class="font-poppins text-gray-600 text-sm sm:text-base md:text-lg leading-6 sm:leading-7 md:leading-8">
            I combine deep technical expertise with a strategic understanding of when
            to use native or cross-platform approaches, ensuring efficient, high-quality
            results. From well-architected code to seamless user experiences, I prioritize
            performance and maintainability at every step.
          </p>
        </div>
      </div>
      
      <!-- Right Content - Enhanced Cards with Icons and Gradients -->
      <div class="order-1 lg:order-2 flex items-center justify-center py-6 sm:py-8">
        <div class="w-full max-w-sm sm:max-w-md md:max-w-lg lg:max-w-full">
          <div class="grid grid-cols-2 gap-3 sm:gap-4 md:gap-5 lg:gap-6">
            {
              highlights.map((highlight, index) => (
                <div class={`aspect-square flex flex-col items-center justify-center p-4 sm:p-5 md:p-6 bg-gradient-to-br ${highlight.bg} border border-white/50 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-500 relative overflow-hidden group`}>
                  
                  <!-- Card Background Pattern -->
                  <div class="absolute inset-0 opacity-10">
                    <div class={`absolute top-0 right-0 w-16 h-16 bg-gradient-to-bl ${highlight.gradient} rounded-full blur-xl transform translate-x-4 -translate-y-4 group-hover:scale-150 transition-transform duration-700`}></div>
                    <div class={`absolute bottom-0 left-0 w-12 h-12 bg-gradient-to-tr ${highlight.gradient} rounded-full blur-lg transform -translate-x-2 translate-y-2 group-hover:scale-125 transition-transform duration-700`}></div>
                  </div>
                  
                  <!-- Number -->
                  <h3 class={`relative z-10 text-lg sm:text-xl md:text-2xl lg:text-xl xl:text-2xl 2xl:text-3xl font-bold font-montserrat bg-gradient-to-r ${highlight.gradient} bg-clip-text text-transparent text-center leading-tight mb-1 sm:mb-2`}>
                    {highlight.title}
                  </h3>
                  
                  <!-- Label -->
                  <p class="relative z-10 text-xs sm:text-sm md:text-base lg:text-sm xl:text-base text-gray-600 font-poppins text-center leading-tight font-medium">
                    {highlight.subtitle}
                  </p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Technologies Marquee -->
  <Technologies />
</section>